/**index.wxss**/

page {
  height: 100%;
  box-sizing: border-box;
}

.container {
  background: #fff;
  height: 100%;
  box-sizing: border-box;
  overflow: auto;
}

.box {
  width: 100%;
}

.list {
  height: 50px;
  line-height: 50px;
  font-size: 15px;
  color: #555555;
  border-bottom: 1px solid #e3e3e3;
  overflow: hidden;
  padding: 0 15px;
  box-sizing: border-box;
  width: 100%;
}

.list .td {
  width: 100%;
  background: url('http://www.xyys.ltd/miniprogram/icon/right.png') no-repeat right center;
  background-size: 14px;
  box-sizing: border-box;
}

.list text {
  float: right;
  font-size: 13px;
  color: #aeaeae;
  display: block;
  padding-right: 15px;
}

.submit_btn {
  position: fixed;
  bottom: 20px;
  left: 0;
  right: 0;
}

.kdc_fix {
  position: fixed;
  bottom: 0;
  left: 0;
  height: 150px;
  background: #fff;
  width: 100%;
  z-index: 999;
  transition: all .5s;
  overflow: hidden;
}

.kdc_fix .title {
  height: 40px;
  line-height: 40px;
  padding-left: 15px;
  font-weight: bold;
  font-size: 16px;
}

.kdc_fix .title .yf {
  float: right;
  background: #8dc13b;
  color: #fff;
  height: 25px;
  line-height: 25px;
  width: 60px;
  margin-top: 6px;
  margin-right: 15px;
  text-align: center;
  font-size: 12px;
}

.kdc_fix .value {
  text-align: center;
  font-size: 16px;
  padding-bottom: 20px;
}

.kdcout {
  bottom: -300px;
}

.fix_list {
  height: 40px;
  line-height: 40px;
  padding: 0 20px;
  box-sizing: border-box;
  font-size: 14px;
  border-bottom: #ddd 1px solid;
  color: #666;
  overflow: hidden;
}

.autoheight {
  height: auto;
}

.jsh {
  font-size: 14px;
  color: #555555;
  margin-top: 45px;
  text-align: center;
}

.kcal {
  font-size: 30px;
  color: #555555;
  margin-top: 5px;
  text-align: center;
}

.yueout {
  bottom: -800px;
}

.yuefixbom {
  z-index: 100;
}