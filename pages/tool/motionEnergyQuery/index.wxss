/**index.wxss**/

page {
  height: 100%;
  box-sizing: border-box;
}

.container {
  background: #f9f9f9;
  height: 100%;
  box-sizing: border-box;
  overflow: auto;
  padding: 15px;
}

.list {
  border-radius: 5px;
  background: #a3c66b;
  padding: 20px 15px;
  height: auto;
  overflow: hidden;
  color: #fff;
  font-size: 16px;
  margin-bottom: 15px;
}

.left {
  float: left;
  color: #fff;
  background: url('http://www.xyys.ltd/miniprogram/icon/yd.png') no-repeat center top;
  width: 70px;
  height: 85px;
  padding-top: 65px;
  overflow: hidden;
  box-sizing: border-box;
  font-size: 16px;
}

.right {
  float: right;
  text-align: center;
  width: 45%;
  padding-top: 10px;
}

.p {
  font-size: 16px;
  color: #fff;
}

.sped_wr {
  width: 100%;
  height: 7px;
  background: #c0c0c0;
  position: relative;
  border-radius: 4px;
  margin: 10px 0;
  overflow: hidden
}

.sped {
  position: absolute;
  left: 0;
  top: 0;
  height: 100%;
  border-radius: 4px;
  background: #fff;
}