/**index.wxss**/

page {
  height: 100%;
  box-sizing: border-box;
}

.container {
  background: #f9f9f9;
  height: 100%;
  box-sizing: border-box;
  overflow: auto;
}


.barbom {
  height: 58px;
  width: 100%;
  overflow: hidden;
  background: #f5f5f5;
  position: fixed;
  bottom: 0;
  left: 0;
  box-shadow: 2px 2px 3px rgba(0, 0, 0, 1);
}

.barbom navigator,
.barbom .add {
  width: 33.333%;
  text-align: center;
  float: left;
  color: #cdcdcd;
  box-sizing: border-box;
}

.barbom navigator.active {
  color: #8dc13b;
}

.barbom navigator image {
  width: 25px;
  height: 25px;
  padding-top: 8px;
}

.barbom .add {
  background: url("http://www.xyys.ltd/miniprogram/icon/tj.png") no-repeat center;
  background-size: 40px;
  height: 58px;
}


/* 菜单 */

.navalert {
  position: fixed;
  bottom: 0;
  width: 100%;
  height: 255px;
  overflow: hidden;
  box-sizing: border-box;
  background: #fff;
  z-index: 999;
  transition: all .5s;
}

.navtol {
  height: auto;
  overflow: hidden;
}

.navtol navigator {
  display: block;
  float: left;
  width: 33.3333%;
  text-align: center;
  padding-top: 50px;
}

.navtol .title {
  color: #505050;
  font-size: 16px;
}

.navtol .p {
  font-size: 12px;
  color: #505050;
}

.navtol navigator:nth-child(1) {
  background: url("http://www.xyys.ltd/miniprogram/icon/nav_zc.png") no-repeat center 15px;
  background-size: 30px;
}

.navtol navigator:nth-child(2) {
  background: url("http://www.xyys.ltd/miniprogram/icon/nav_wc.png") no-repeat center 15px;
  background-size: 30px;
}

.navtol navigator:nth-child(3) {
  background: url("http://www.xyys.ltd/miniprogram/icon/nav_wwc.png") no-repeat center 15px;
  background-size: 30px;
}

.navtol navigator:nth-child(4) {
  background: url("http://www.xyys.ltd/miniprogram/icon/nav_yd.png") no-repeat center 15px;
  background-size: 30px;
}

.navtol navigator:nth-child(5) {
  background: url("http://www.xyys.ltd/miniprogram/icon/nav_jl.png") no-repeat center 15px;
  background-size: 30px;
}

.nav_cancel {
  background: url("http://www.xyys.ltd/miniprogram/icon/tj.png") no-repeat center 15px;
  background-size: 40px;
  height: 55px;
  width: 40px;
  margin: 0 auto;
  margin-top: 15px;
  transform: rotate(44deg);
}

.nhide {
  bottom: -300px;
}


.top{
  width: 100%;
  height: 110px;
  background: #8dc13b;
  padding: 0 25px;
  box-sizing: border-box;
  overflow: hidden;
}

.top image{
