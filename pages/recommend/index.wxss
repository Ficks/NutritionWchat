/**index.wxss**/

page {
  height: 100%;
  box-sizing: border-box;
}

.container {
  background: #f9f9f9;
  height: 100%;
  padding: 0 10px;
  box-sizing: border-box;
  padding-bottom: 50px;
  overflow: auto;
}

.tl {
  width: 100%;
  height: 70px;
  line-height: 70px;
  background: url("http://www.xyys.ltd/miniprogram/icon/zc.png") no-repeat left;
  background-size: 20px;
  padding-left: 23px;
  color: #494949;
  font-size: 15px;
  font-weight: bold;
  position: relative;
  box-sizing: border-box;
}

.tl2 {
  background: url("http://www.xyys.ltd/miniprogram/icon/wc.png") no-repeat left;
  background-size: 20px;
}

.tl3 {
  background: url("http://www.xyys.ltd/miniprogram/icon/wwc.png") no-repeat left;
  background-size: 20px;
}

.tlw {
  padding: 0 10px;
}

.tl:after {
  width: 80%;
  right: 0;
  top: 50%;
  height: 1px;
  position: absolute;
  content: "";
  display: block;
  background: #dddddd;
}

.list_box {
  width: 100%;
  height: auto;
  overflow: hidden;
}

.list {
  width: 50%;
  float: left;
  box-sizing: border-box;
  text-align: center;
  padding: 0 10px;
  padding-top: 5px;
}

.list image {
  width: 100%;
}

.list .h2 {
  font-size: 15px;
  color: #494949;
  font-weight: 500;
  padding: 5px 0 2px;
}

.list .p {
  font-size: 13px;
  color: #666;
}

.tip {
  text-align: center;
  font-size: 12px;
  color: #666666;
  margin-top: 10px;
}