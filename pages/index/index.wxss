.tab_bar {
  width: 100%;
  margin-top: 10px;
  border-bottom: 1px solid #e4e4e4;
  height: auto;
  overflow: hidden;
}

.tab_bar .list {
  float: left;
  color: #666666;
  font-weight: bold;
  line-height: 30px;
  height: 30px;
  width: 33.3333%;
  text-align: center;
  position: relative;
}

.tab_bar .list.active:after {
  position: absolute;
  left: 50%;
  bottom: 0;
  margin-left: -15px;
  content: "";
  display: block;
  height: 3px;
  width: 30px;
  background: #f59f32;
}

.list_box {
  height: auto;
  overflow: hidden;
  padding-left: 20px;
  box-sizing: border-box;
}

.list_box .list {
  position: relative;
  line-height: 35px;
  height: 35px;
  color: #666666;
}

.list_box .list text {
  float: right;
}

.list_box .list:after {
  content: "";
  display: block;
  width: 8px;
  height: 8px;
  border-radius: 50%;
  background: #000;
  position: absolute;
  left: -15px;
  top: 13px;
}

