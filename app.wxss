/**app.wxss**/

text,
view,
input,
textarea {
  font-size: 14px;
}

image {
  max-width: 100%;
}

input {
  border: 1px solid #ddd;
  box-sizing: border-box;
  padding: 0 12px;
  border-radius: 4px;
  height: 30px;
  line-height: 30px;
}

.fixbom {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, .5);
  z-index: 99;
}

.container {
  height: 100%;
  box-sizing: border-box;
}

input::-webkit-input-placeholder,
textarea::-webkit-input-placeholder {
  color: #fff;
}

input:-moz-placeholder,
textarea:-moz-placeholder {
  color: #fff;
}

input::-moz-placeholder,
textarea::-moz-placeholder {
  color: #fff;
}

input:-ms-input-placeholder,
textarea:-ms-input-placeholder {
  color: #fff;
}

.none {
  display: none;
  width: 0;
  height: 0;
}

.submit_btn {
  width: 80%;
  background: #8dc13b;
  color: #fff;
  text-align: center;
  height: 37px;
  line-height: 37px;
  border-radius: 5px;
  margin: 30px auto;
  font-size: 16px;
}

.submit_btn:active {
  opacity: .9;
}